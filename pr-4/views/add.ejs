<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Add Book</title>
</head>
<body>
    <% 
    let pages = [1, 2, 3, 4, 5, 6, 7, 8, 9]; 
    %>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="col-6">
                        <div class="card-component">
                            <h5 class="card-title">Add Book</h5>
                            <div class="card-details">
                                <form method="post" action="/addbook"enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" id="bookName" aria-describedby="nameHelp" name="bookName">
                                    </div>
                                    <div class="mb-3">
                                        <label  class="form-label">Price</label>
                                        <input type="text" class="form-control" id="bookPrice" aria-describedby="priceHelp" name="price">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Author</label>
                                        <input type="text" class="form-control" id="bookAuthor" aria-describedby="authorHelp" name="author">
                                    </div>
                                    <div class="mb-3">
                                        <label  class="form-label">Image</label>
                                        <input type="file" class="form-control" id="bookImage" name="image">
                                    </div>
                                    <div class="mb-3">
                                        <label  class="form-label">Pages</label>
                                        <select id="bookPages" class="form-select" aria-label="Select number of pages" name="pages">
                                            <option selected>Select Pages</option>
                                            <% pages.map((p) => { %>
                                                <option value="<%= p %>"><%= p %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a href="/view" class="btn btn-primary">View</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
